extends ../layout

block content

    section#adminContainer
                .container
                #loginAdminBlock
                    .signin-form
                    h2.formTitleAdmin ADMINISTRATOR
                    p.descriptionLogin Please sign in to get access
                            form(action='/contact/admin', method='GET')
                                .row#blockLoginAdmin
                                .col-12
                                    input.form-control.logInFormInput(type='email', name='email',  id='logInEmail',placeholder='Your email')
                                .col-12
                                    input.form-control.logInFormInput(type='password', name='password', id='logInPassword', placeholder='Your password')
                                .form-group.form-button
                                    input#logInBtn.form-submit.btn.btn-success(type='submit', name='login', value='Log in')
                                    //- figure
                                    //- img.rounded-circle(src='images/admin-avatar.jpg.jpg', alt='Admin avatar')
    if name == "Bob"
        h1 Hello Bob
    else
        h1 My name is #{name}