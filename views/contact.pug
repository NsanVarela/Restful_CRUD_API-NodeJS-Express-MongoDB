extends layout

block content

  // Navbar
  nav.navbar.navbar-expand-lg.navbar-dark
    a.navbar-brand(href='#') #{title}
    button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarText', aria-controls='navbarText', aria-expanded='false', aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarText.collapse.navbar-collapse
      ul.navbar-nav.mr-auto
        li.nav-item.active
          a.nav-link(href='#carouselExampleControls')
            | Technos 
            span.sr-only (current)
        li.nav-item
          a#redirection.nav-link(href='#infoContainer') Tutoriel
      span.navbar-text
        | Navbar text with an inline element

  h1.containerTitle Bienvenue #{firstname} #{lastname}
  br
  p #{adress} #{firstname} #{lastname} #{email}
  p#welcome.col-12 Facilitez vos développements de sites web
  br
  
  table.table.table-hover.table-dark.col-6
      tbody
        tr
          td(style='display:none')  ID 
          td  Prénom 
          td  Nom 
          td  Email 
          td  Options
        each contact in contacts
          tr
            td(style='display:none')= contact._id
            td= contact.firstname
            td= contact.lastname
            td= contact.email
            td 
              <a type="button" href="/contact/delete?_id=#{contact._id}">Delete</a>
              br
              <a type="button" href="/contact/update?_id=#{contact._id}" >Edit</a>
